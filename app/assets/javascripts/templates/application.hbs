<div class="row">
	<div class="col-md-9 col-md-offset-2">
		<div class="navbar navbar-inverse" id="no-border" role="navigation">
			<div class="container-fluid">
			 <!-- Brand and toggle get grouped for better mobile display -->
			 <div class="navbar-header">
			   <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			     <span class="sr-only">Toggle navigation</span>
			     <span class="icon-bar"></span>
			     <span class="icon-bar"></span>
			     <span class="icon-bar"></span>
			   </button>
			   <ul class="navbar-header">
			   		{{#link-to 'companies.index' (query-params kind='null')}}
			   			<li><img src="https://s3.amazonaws.com/vinsync/navbar-logo.png" class="navbar-brand"/></li>
			   		{{/link-to}}
			   </ul>
			 </div>

			 <!-- Collect the nav links, forms, and other content for toggling -->
			 <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			   <ul class="nav navbar-nav">
			 		{{#view "dropdown"}}
			 			{{#link-to (query-params kind='null') class="dropdown-toggle"}}Brands<span class="caret"></span>{{/link-to}}
			 			{{#if isDropdownVisible}}	
			 				<ul class="dropdown-list">
			 				  {{#each company in navCompanies}}
			 				    {{#link-to 'companies.show' company tagName="li"}}{{company.name}}{{/link-to}}
			 				  {{/each}}
			 				</ul>
			 			{{/if}}
			 		{{/view}}
			 		<li>
			 			{{#link-to (query-params kind='synth') classNames="dropdown"}}Synthesizer{{/link-to}}
			 		</li>
		 			<li>
		 				{{#link-to (query-params kind='drum') classNames="dropdown"}}Drum Machine{{/link-to}}
		 			</li>
		 			<li>
			 			{{#link-to (query-params kind='sampler') classNames="dropdown"}}Sampler{{/link-to}}
			 		</li>
			   	</ul>
			 	</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</div>
	</div>
</div>
<div class="container-fluid">
	{{#view "body"}}
		<div class="row-fluid">
			{{outlet}}
		</div>
	{{/view}}
</div>
<div id="footer" class="row">
	<div class="row-content-wrap">	
		<div class="col-md-5 col-md-offset-7">
			<div class="footer-row">		
			</div>
			<div class="footer-row">
				<ul id="donate-message">
					<li>Cos machines don't run themselves</li>
				</ul>
			</div>
		</div>
	</div>
</div>